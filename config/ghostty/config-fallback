# Ghostty fallback configuration for systems with OpenGL issues
# Use this if the main config fails with "unable to acquire opengl context"

# Force software rendering (slower but more compatible)
renderer = software

# Font and appearance
font-family = "MesloLGS NF"
theme = tron
font-size = 10
background-opacity = 0.9
mouse-hide-while-typing = true

# Disable features that require hardware acceleration
background-blur-radius = 0

# Keybindings (same as main config)
keybind = global:ctrl+s=toggle_quick_terminal
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=goto_split:right
keybind = ctrl+r=reload_config

keybind = ctrl+shift+up=new_split:up
keybind = ctrl+shift+down=new_split:down
keybind = ctrl+shift+left=new_split:left
keybind = ctrl+shift+right=new_split:right